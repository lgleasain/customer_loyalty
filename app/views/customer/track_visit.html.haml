%h1.center Customer Rewards
.container
  .center
    .left-cell 
      Customer:
    .right-cell 
      = @customer_user.name
  .center
    .left-cell
      = @merchant.earn_type.pluralize().capitalize()
      \: 
    .right-cell
      = @passbook.balance
  %br/
  .button-div.center
    = link_to 'Earn', nil, class: 'btn btn-large btn-primary'

  .row
    %h2.center Rewards Earned

    %hr.span6.offset3

    .reward-div.offset3.span6.center
      .reward-image
        &nbsp; 
        -#= image_tag "http://placehold.it/50x50"
      .reward-text.center
        = @merchant.reward_program_name
      .reward-points
        = pluralize(@merchant.reward_threshold_number, @merchant.earn_type)
  .button-div.center
    = link_to 'Redeem', nil, class: 'btn btn-large btn-primary'

  -#%h3 Customer:
  -#= debug(@customer) if user_session != nil
  -#%h3 Customer user:
  -#= debug(@customer_user) if user_session != nil
  -#%h3 Merchant:
  -#= debug(@merchant) if user_session != nil
  -#%h3 current_user:
  -#= debug(@current_user) if user_session != nil
  -#%h3 passbook:
  -#= debug(@passbook) if user_session != nil
  -#= debug(@merchant.user) if user_session != nil

