- if current_user.try(:is_merchant?)
  %header.navbar.navbar-fixed-top
    .navbar-inner
      .container
        -#.ll-logo
        = image_tag('LL-squareicon.png', size:'32x32', id:'ll-logo-img')
        =link_to "LocalLoyalty", '#', class: "brand"
        - if current_user
          .brand
            \|
          .brand #{current_user.name}
        %nav
          %ul.nav.pull-right
            %li= link_to "Home", root_path 
            - if current_user
              %li= link_to "Merchant Profile", merchant_edit_path
              %li= link_to "Edit Reward", reward_program_details_path(current_user.rolable_id)
              %li= link_to "Activity Report", nil
              %li= link_to "Sign out", destroy_user_session_path, method: :delete
            - else
              %li= link_to "Sign in", new_user_session_path
